<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">

    <changeSet id="1646686325020" author="Cosmin Fane Cozma">
        <createTable tableName="credit_cards">
            <column name="number" type="VARCHAR(16)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_credit_cards"/>
            </column>
            <column name="brand" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="expiry_month" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="expiry_year" type="SMALLINT">
                <constraints nullable="false"/>
            </column>
            <column name="owner" type="VARCHAR(36)"/>
        </createTable>
        <addUniqueConstraint columnNames="number" constraintName="uc_credit_cards_number" tableName="credit_cards"/>
        <addForeignKeyConstraint baseColumnNames="owner" baseTableName="credit_cards"
                                 constraintName="FK_CREDIT_CARDS_ON_OWNER" referencedColumnNames="id"
                                 referencedTableName="profiles"/>
    </changeSet>
</databaseChangeLog>